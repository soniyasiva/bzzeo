= form_for @share do |f|
  - if @share.errors.any?
    #error_explanation
      %h2= "#{pluralize(@share.errors.count, "error")} prohibited this share from being saved:"
      %ul
        - @share.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :post
    = f.text_field :post
  .field
    = f.label :profile
    = f.text_field :profile
  .actions
    = f.submit 'Save'
