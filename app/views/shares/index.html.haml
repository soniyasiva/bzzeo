%h1 Listing shares

%table
  %thead
    %tr
      %th Post
      %th Profile
      %th
      %th
      %th

  %tbody
    - @shares.each do |share|
      %tr
        %td= share.post.description
        %td= share.profile.name
        %td= link_to 'Show', share
        %td= link_to 'Edit', edit_share_path(share)
        %td= link_to 'Destroy', share, :method => :delete, :data => { :confirm => 'Are you sure?' }

