  %b Name:
  = @profile.name
%p
  %b Representitive:
  = @profile.representitive
%p
  %b Phone:
  = @profile.phone
%p
  %b Status:
  = @profile.status
%p
  %b Facebook:
  = @profile.facebook
%p
  %b Twitter:
  = @profile.twitter
%p
  %b Instagram:
  = @profile.instagram
%p
  %b Category:
  = @profile.category.name unless @profile.category.nil?
