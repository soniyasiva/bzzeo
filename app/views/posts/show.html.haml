.row
  .col-xs-12.col-sm-6.col-sm-offset-3
    .row.post
      .col-xs-12
        .row.profile
          .col-xs-12
            = @post.profile.name
        .row.image
          -# image, if there is one
          .col-xs-12
            = image_tag(@post.image_url, :class => "img-responsive")
        .row.video
          -# video, if there is one
          .col-xs-12
            = embed(@post.video_url).html_safe unless @post.video_url.nil?
        .row.description
          -# text for the post
          .col-xs-12
            = @post.description
        .row.comments
          -# all comments for the post
          .col-xs-12
            - @post.comments.each do |comment|
              .row.comment
                .col-xs-12
                  .row.profile
                    .col-xs-12
                      = comment.profile.name
                  .row.description
                    .col-xs-12
                      = comment.description
        .row.options
          -# share, like, comment buttons
          .col-xs-12
            %ul.list-inline
              %li
                %span.likes-count{ :data => {:id => @post.id} }
                  = @post.likes.size
                people like this
                = link_to like_post_path(@post), :class => "button btn btn-primary like", method: :put, remote: true, :data => { :id => @post.id } do
                  = @post.liked?(current_user) ? "Unlike" : "Like"
              %li
                = link_to "Comment", '#', :data => { "new-comment-id" => @post.id }, :class => "button btn btn-default new-comment-toggle"
              %li
                = link_to "Share", new_share_path(), { :class => "button btn btn-success" }
        .row.new-comment.collapse{:data => { "new-comment-id" => @post.id }}
          .col-xs-12
            = bootstrap_form_for(Comment.new, remote: true) do |f|
              = f.hidden_field :post_id, :value => @post.id
              = f.hidden_field :profile_id, :value => current_user.profile.id
              = f.text_area :description
              = f.submit "Post Comment", :class => "btn btn-primary submit-comment"
