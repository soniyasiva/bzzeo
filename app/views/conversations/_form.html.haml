= bootstrap_form_for @conversation do |f|
  - if @conversation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@conversation.errors.count, "error")} prohibited this conversation from being saved:"
      %ul
        - @conversation.errors.full_messages.each do |msg|
          %li= msg

  = f.select(:receiver_id, Profile.all.collect {|c| [c.name, c.id]})
  = f.text_area :message
  = f.check_box :read
  = f.submit 'Save'
