%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "/"} Bzzeo
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-left
        %li{class: "#{active? root_path}"}
          = link_to root_path do
            = icon 'house'
            Home
        %li{class: "#{active? conversations_path}"}
          = link_to "Messages", conversations_path
        %li{class: "#{active? profiles_path}"}
          = link_to "Directory", profiles_path

        - if current_user.admin?
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Admin
              %span.caret
            %ul.dropdown-menu{:role => "menu"}
              %li
                = link_to "Pages", pages_path
              %li
                = link_to "Categories", categories_path
              %li
                = link_to "Likes", likes_path
              %li
                = link_to "Comments", comments_path
              %li
                = link_to "Tags", tags_path
      %ul.nav.navbar-nav.pull-right
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            .profile-avatar
              .circle-avatar{:style => "background-image:url(#{current_user.profile.thumbnail_url})"}
            = current_user.profile.name
            -# .icon-wrap
            -#   = icon 'bars'
          %ul.dropdown-menu{:role => "menu"}
            %li
              = link_to "My Profile", profile_path(current_user.profile)
            %li
              = link_to "Edit Profile", edit_profile_path(current_user.profile)
            %li
              = link_to "Viewed My Profile", views_path
            %li
              = link_to('Logout', destroy_user_session_path, :method => :delete)
