.row
  .col-xs-12
    %h1= @profile.name
    %p
      %b Video:
      = embed(@profile.video).html_safe unless @profile.video.blank?
    %p
      %b Representitive:
      = @profile.representitive
    %p
      %b Phone:
      = @profile.phone
    %p
      %b Address:
      = @profile.address
    %p
      %b Geo Codeded:
      = "#{@profile.lat}, #{@profile.lng}"
    %p
      %b Status:
      = @profile.status
    %p
      %b Facebook:
      = @profile.facebook
    %p
      %b Twitter:
      = @profile.twitter
    %p
      %b Instagram:
      = @profile.instagram
    %p
      %b Category:
      = @profile.category.name unless @profile.category.nil?
    %p
      %b User:
      = @profile.user.email unless @profile.user.nil?

    = link_to 'Edit', edit_profile_path(@profile)
.row
  .col-xs-12
    = link_to friend_profile_path(@profile), :class => "button btn btn-primary friend", method: :put, remote: true, :data => { :id => @profile.id } do
      = @profile.friend?(current_user) ? "Unfollow" : "Follow"
    = link_to partner_profile_path(@profile), :class => "button btn btn-primary partner", method: :put, remote: true, :data => { :id => @profile.id } do
      = @profile.partner?(current_user) ? "Unpartner" : "Partner"
    = link_to new_conversation_path(profile_id: @profile.id), :class => "button btn btn-primary" do
      Message
