= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :image_url
    = f.text_field :image_url
  .field
    = f.label :video_url
    = f.text_field :video_url
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :profile
    = f.text_field :profile
  .actions
    = f.submit 'Save'
