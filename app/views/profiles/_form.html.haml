= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :video
    = f.text_field :video
  .field
    = f.label :representitive
    = f.text_field :representitive
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :facebook
    = f.text_field :facebook
  .field
    = f.label :twitter
    = f.text_field :twitter
  .field
    = f.label :instagram
    = f.text_field :instagram
  .field
    = f.label :category
    = f.select(:category, Category.all.collect {|c| [c.name, c.id]})
  .actions
    = f.submit 'Save'
